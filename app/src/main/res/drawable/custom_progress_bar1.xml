<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" /> <!-- Customize the corner radius -->
            <solid android:color="#CCCCCC" /> <!-- Background color for the progress bar -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" /> <!-- Customize the corner radius -->
                <solid android:color="#FF214A" /> <!-- Progress bar color -->
            </shape>
        </clip>
    </item>
</layer-list>
